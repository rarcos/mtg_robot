{
  "manifest_version": 3,
  "name": "MTG Robot",
  "description": "MTG Robot",
  "version": "1.1",
  "permissions": [
    "contextMenus",
    "activeTab",
    "downloads"
  ],
  "icons": {
    "32": "icon.png",
    "64": "icon@2x.png"
  },
  "background": {
    "service_worker": "mtg_actions.js",
    "type": "module"
  },
  "host_permissions": [
    "https://www.mtgmintcard.com/shopping-cart",
    "https://www.cardkingdom.com/cart"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.mtgmintcard.com/shopping-cart",
        "https://www.cardkingdom.com/cart"
      ],
      "js": [
        "xlsx.bundle.js",
        "card.js",
        "mtg_export.js"
      ],
      "run_at": "document_end"
    }
  ]
}