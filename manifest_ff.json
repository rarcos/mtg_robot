{
  "manifest_version": 3,
  "name": "MTG Robot",
  "description": "MTG Robot",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "downloads"
  ],
  "background": {
    "scripts": ["mtg_actions.js"]
  },
  "host_permissions": [
    "https://www.mtgmintcard.com/shopping-cart",
    "https://www.cardkingdom.com/cart"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.mtgmintcard.com/shopping-cart",
        "https://www.cardkingdom.com/cart"
      ],
      "js": ["mtg_export.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "@rarcos-mtg-robot",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}
