{
  "manifest_version": 3,
  "name": "MTG Robot",
  "description": "MTG Robot",
  "version": "1.2.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "downloads",
    "webNavigation",
    "scripting"
  ],
  "icons": {
    "32": "icon.png",
    "64": "icon@2x.png"
  },
  "chromium:background": {
    "service_worker": "mtg_actions.js",
    "type": "module"
  },
  "firefox:background": {
    "scripts": [
      "mtg_actions.js"
    ]
  },
  "host_permissions": [
    "https://www.mtgmintcard.com/shopping-cart",
    "https://www.cardkingdom.com/cart"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.mtgmintcard.com/shopping-cart",
        "https://www.cardkingdom.com/cart"
      ],
      "js": [
        "mtg_export.js"
      ],
      "run_at": "document_end"
    }
  ]
}